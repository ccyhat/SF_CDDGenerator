<UserControl x:Class="SFTemplateGenerator.MainWindow.Views.SettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SFTemplateGenerator.MainWindow.Views"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:cm="http://caliburnmicro.com"
             mc:Ignorable="d" 
             Margin="40 20 40 20" FontSize="16">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>

                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel Margin="0,40,0,0">
        <Grid Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Content="gbxml文件存储路径：" Grid.Row="0" Margin="5"/>

            <TextBox Grid.Row="1" Grid.Column="0" Margin="5" Text="{Binding GBxmlFileSavePath}"/>

            <Button Grid.Row="1" Grid.Column="1" Content="选择路径" Margin="5,0,5,0" HorizontalAlignment="Right" >
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="Click">
                        <cm:ActionMessage MethodName="SetGBxmlFileSavePath">
                            <cm:Parameter Value="$source"/>
                            <cm:Parameter Value="$eventArgs"/>
                        </cm:ActionMessage>
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </Button>

        </Grid>

        <Grid Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Content="sf-template-local-db路径：" Grid.Row="0" Margin="5"/>

            <TextBox Grid.Row="1" Grid.Column="0" Margin="5" Text="{Binding ConfigPath}"/>

            <Button Grid.Row="1" Grid.Column="1" Content="选择路径" Margin="5,0,5,0" HorizontalAlignment="Right" >
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="Click">
                        <cm:ActionMessage MethodName="SetConfigPath">
                            <cm:Parameter Value="$source"/>
                            <cm:Parameter Value="$eventArgs"/>
                        </cm:ActionMessage>
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </Button>

        </Grid>
        <!-- DeviceType/BoardType/DCTempConfig/开入开出 配置文件路径 -->
        <Grid Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Content="DIO配置路径：" Grid.Row="0" Margin="5"/>

            <TextBox Grid.Row="1" Grid.Column="0" Margin="5" Text="{Binding DIODefinePath}"/>

            <Button Grid.Row="1" Grid.Column="1" Content="选择路径" Margin="5,0,5,0" HorizontalAlignment="Right" >
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="Click">
                        <cm:ActionMessage MethodName="SetDIODefinePath">
                            <cm:Parameter Value="$source"/>
                            <cm:Parameter Value="$eventArgs"/>
                        </cm:ActionMessage>
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </Button>

        </Grid>
        <!-- DeviceModel配置文件路径 -->
        <Grid Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Content="装置模型文件路径：" Grid.Row="0" Margin="5"/>

            <TextBox Grid.Row="1" Grid.Column="0" Margin="5" Text="{Binding DeviceModelPath}"/>

            <Button Grid.Row="1" Grid.Column="1" Content="选择路径" Margin="5,0,5,0" HorizontalAlignment="Right">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="Click">
                        <cm:ActionMessage MethodName="SetDeviceModelPath">
                            <cm:Parameter Value="$source"/>
                            <cm:Parameter Value="$eventArgs"/>
                        </cm:ActionMessage>
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </Button>

        </Grid>
        <!-- 测试仪设置 -->
        <Grid Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Content="测试仪设置：" Grid.Row="0" Margin="5"/>
            <ComboBox Grid.Row="1" x:Name="FilledComboBox"  Style="{StaticResource MaterialDesignFilledComboBox}"
                    IsEnabled="{Binding Path=IsChecked, ElementName=FilledComboBoxEnabledCheckBox}"
                    ItemsSource="{Binding TesterModeOptions}"  
                    SelectedItem="{Binding SelectedTesterMode, Mode=TwoWay}"
                    cm:Message.Attach="[Event SelectionChanged] = [Action FilledComboBox_SelectionChanged($source, $eventArgs)]">
            </ComboBox>
        </Grid>
    </StackPanel>
</UserControl>
