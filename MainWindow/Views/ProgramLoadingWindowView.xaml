<UserControl x:Class="SFTemplateGenerator.MainWindow.Views.ProgramLoadingWindowView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SFTemplateGenerator.MainWindow.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Transparent">
    <Grid Grid.Row="2" Grid.Column="0">
        <Grid x:Name="LoadGrid" Background="Black" Opacity="0.5"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed">
            <Border Background="White" CornerRadius="5" Padding="20">
                <StackPanel>
                    <TextBlock Text="Loading..." FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
                    <ProgressBar IsIndeterminate="True" Height="20" Margin="0 10 0 0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
