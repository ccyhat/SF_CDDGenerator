<UserControl x:Class="SFTemplateGenerator.MainWindow.Views.DisplayDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SFTemplateGenerator.MainWindow.Views"
             xmlns:ct="clr-namespace:SFTemplateGenerator.MainWindow.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <TabControl>

        <TabItem Header="属性">
            <ct:PropertyList DisplayItem="{Binding Data}"/>
        </TabItem>
        <TabItem Header="通讯命令">
            <ct:CMDList DisplayItem="{Binding Data}"/>
        </TabItem>
        <TabItem Header="DLL调用">
            <TextBox Text="{Binding Data.DllCall.CData}" TextWrapping="Wrap"/>
        </TabItem>
        <TabItem Header="初始化脚本">
            <ct:TextShowCode TextValue="{Binding Data.ScriptInit.CData}"/>
        </TabItem>
        <TabItem Header="结果脚本">
            <ct:TextShowCode TextValue="{Binding Data.ScriptResult.CData}"/>
        </TabItem>
    </TabControl>
</UserControl>
